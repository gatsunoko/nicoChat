= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :category_id 
    = f.collection_select :category_id, Category.all, :enum_key, :title, {}, {:selected => :category_id}
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
