= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message

  .category
    = f.label 'カテゴリ' 
    = f.collection_select :category_id, Category.all, :id, :title, {}, {:selected => :category_id, class: 'form-control'}
  .title
    = f.label :title
    = f.text_field :title, class: 'form-control title_field'
  .actions
    = f.submit '保存', class: 'btn'
