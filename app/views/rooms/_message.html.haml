- if message.master?
  - master = ' master_chat'
- else
  - master = ''
%li{class: "message_area#{master}"}
  %p.thumbnail
    = message.username
    = " | "
    %span.uuid
      = message.uuid
      = " | "
    %span.date
      = message.created_at.strftime('%Y/%m/%d %H:%M')
  .message
    %p
      = simple_format(message.text)